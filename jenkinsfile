pipeline {
    agent any
    environment {
            JAVA_HOME = '/usr/lib64/jvm/jre-17-openjdk'
            M2_HOME = '/usr/share/maven'
            PATH = "$JAVA_HOME/bin:$MAVEN_HOME/bin:$PATH"
    }

    stages {
        stage('Test') {
            steps {
                script {
                    sh './mvnw test' // Assuming Maven is used
                }
            }
        }
        stage('Build Maven'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/arijknani/mongo-demo.git']]])
                sh './mvnw clean install'
            }
        }
    }
}

