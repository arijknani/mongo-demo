pipeline {
    agent any
    
    tools {
        // Define the Maven tool with the desired version
        maven 'maven 3.9.4'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'building the app...'
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo 'running tests...'
                    sh 'mvn test'
                }
            }
        }
    }
}



