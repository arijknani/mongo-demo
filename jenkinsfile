pipeline {
    agent any
    
    environment {
        JAVA_HOME = '/usr/lib64/jvm/jre-17-openjdk'
        M2_HOME = '/usr/share/maven'
        PATH = "$JAVA_HOME/bin:$M2_HOME/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
    }
}


